<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr> 
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Cover</th>
      <th>ACTIONS</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <td><%= image_tag book.book_cover_photo_sm %></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
