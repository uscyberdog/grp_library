<div class="jumbotron">
  <div class="container">
    <p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr> 
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Cover</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @books.empty? %>
      <tr>
        <td>No books in Master Library</td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% else %>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.isbn %></td>
          <td><%= image_tag book.book_cover_photo_sm %></td>
          <td><%= link_to 'Show', book, class: 'page-link' %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
  </div>
</div>
<%= link_to 'Add A New Book', new_book_path, class: 'page-link' %>
