<h1>Users</h1>

<table>
  <thead>
    <tr class=user_bg>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class=center_text><%= user.id %></td>
        <td><%= user.fname %> 
            <%= user.lname %> 
        </td>
        <td><%= user.email %></td>
        

        <td class=center_text><%= link_to 'Show', user %></td>
        <td class=center_text><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class=center_text><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

