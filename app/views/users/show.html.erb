<!-- Show any notice returned from a previous action -->
<p id="notice"><%= notice %></p>
<!-- Display a single user -->
<span class="name">Showing User: <%= @user.fname %> <%=@user.lname %></span>
<span style="font-size: 15px; font-family: Helvetica"><%= link_to '(edit credentials)', edit_user_path(@user) %></span><br><br>


<span>Email: <%= @user.email %></span>


<table class="table table-striped table-hover">
  <thead>
    <tr> 
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Cover</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  	<% if @user.books.empty? %>
  		<tr>
  			<td>You have no books to show</td>
  			<td></td>
  			<td></td>
  			<td></td>
  			<td></td>
  		</tr>
  	<% else %>
	    <% @user.books.each do |book| %>
	      <tr>
	        <td><%= book.title %></td>
	        <td><%= book.author %></td>
	        <td><%= book.isbn %></td>
	        <td><%= image_tag book.book_cover_photo_sm %></td>
	        <td><%= link_to 'Show', book, class: 'page-link' %></td>
          <!-- <td><%#= link_to 'Remove', %> </td> -->
	      </tr>
	    <% end %>
	  <% end %>
  </tbody>
</table>
